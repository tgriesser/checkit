{
  "name": "checkit",
  "version": "0.6.0",
  "description": "Simple validations for node and the browser.",
  "main": "server.js",
  "browser": "browser.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha -R spec test/index.js",
    "build": "npm run build:main && npm run build:dist",
    "build:main": "./node_modules/webpack/bin/webpack.js --output-library Checkit --output-library-target umd browser.js dist/checkit.js",
    "build:dist": "./node_modules/webpack/bin/webpack.js --output-library Checkit --output-library-target umd --optimize-minimize browser.js dist/checkit.min.js"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "bluebird": "^2.9.14",
    "inherits": "^2.0.1",
    "lodash": "^2.4.0 || ^3.0.0",
    "when": "^3.0.0"
  },
  "devDependencies": {
    "mocha": "~1.15.0",
    "node-uuid": "~1.4.1",
    "webpack": "^1.12.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tgriesser/checkit.git"
  },
  "keywords": [
    "validation"
  ],
  "author": {
    "name": "Tim Griesser",
    "web": "https://github.com/tgriesser"
  },
  "license": "MIT"
}
